{
  "name": "backend",
  "version": "1.0.0",
  "description": "Repositório Backend do API do 4º Semestre.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "dev": "concurrently \"npm start\" \"cd ../frontend && npm start\" \"typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run\"",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/default",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimpaTech/backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SimpaTech/backend/issues"
  },
  "homepage": "https://github.com/SimpaTech/backend#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.2",
    "mysql2": "^3.9.3",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
